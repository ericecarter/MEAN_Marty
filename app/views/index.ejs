<!DOCTYPE html>
<html xmlns:ng="http://angularjs.org">
	<head>
		<!-- Use the 'title' property to render a page title  -->
		<title><%= title %></title>
		<!-- Link to the style sheet  -->
		<link rel="stylesheet" type="text/css" href="mystyle.css">
	</head>
	<body>
		<!-- Render AngularJS views  -->
		<section ng-view></section>

		<!-- Render the user object -->
		<script type="text/javascript">
			window.user = <%- user || 'null' %>;
		</script>
		<script src="/lib/jquery-2.1.4.js"></script>
		<!-- Load the Socket.io client -->
		<script type="text/javascript" src="/socket.io/socket.io.js"></script>

		<!-- Load local libraries -->
		<script type="text/javascript" src="/lib/angular/angular.js"></script>
		<script type="text/javascript" src="/lib/angular-route/angular-route.js"></script>
		<script type="text/javascript" src="/lib/angular-resource/angular-resource.js"></script>
		<script type="text/javascript" src="/lib/angular-cookies/angular-cookies.js"></script>

		<!-- Load an external library-->
		<script src="https://cdn.rawgit.com/Luegg/angularjs-scroll-glue/master/src/scrollglue.js"></script>

		<!-- Load the homepage module -->
		<script type="text/javascript" src="/homepage/homepage.client.module.js"></script>
		<script type="text/javascript" src="/homepage/controllers/homepage.client.controller.js"></script>
		<script type="text/javascript" src="/homepage/config/homepage.client.routes.js"></script>

		<!-- Load the users module -->
		<script type="text/javascript" src="/users/users.client.module.js"></script>
		<script type="text/javascript" src="/users/services/authentication.client.service.js"></script>

		<!-- Load the poker module -->
		<script type="text/javascript" src="/poker/poker.client.module.js"></script>
		<script type="text/javascript" src="/poker/services/socket.client.service.js"></script>
		<script type="text/javascript" src="/poker/services/poker.client.rooms.service.js"></script>
		<script type="text/javascript" src="/poker/controllers/poker.client.controller.js"></script>
		<script type="text/javascript" src="/poker/controllers/poker.client.lobby.controller.js"></script>
		<script type="text/javascript" src="/poker/config/poker.client.routes.js"></script>

		<!-- Bootstrap AngularJS application -->
		<script type="text/javascript" src="/application.js"></script>
	</body>
</html>